        },
        "translations": {
          "English": {
            "Pritpal Singh Bindra": {
              "translation": "How long would you be in the never-ending captivity of anxieties?",
              "additional_information": {}
            }
          },
          "Punjabi": {
            "Dr. Ganda Singh": {
              "translation": "ਤੇਰੀਆਂ ਛੁਪੀਆਂ ਹੋਈਆਂ ਖੁਬੀਆਂ ਦਾ ਜਦ ਪਤਾ ਚਲ ਗਿਆ,",
              "additional_information": {}
            }
          }
        }
      },
      {
