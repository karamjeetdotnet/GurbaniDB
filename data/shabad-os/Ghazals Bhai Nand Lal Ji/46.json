        },
        "translations": {
          "English": {
            "Pritpal Singh Bindra": {
              "translation": "What is distress and depression? It is the negligence of His meditation;",
              "additional_information": {}
            }
          },
          "Punjabi": {
            "Dr. Ganda Singh": {
              "translation": "ਜਿੱਥੇ ਕਿੱਥੇ ਵੀ ਲੋਕਾਣ ਨੇ ਦੀਵਾ ਬਾਲਿਆ ਹੈ,",
              "additional_information": {}
            }
          }
        }
      },
