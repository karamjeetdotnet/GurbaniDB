          "Punjabi": {
            "Dr. Ganda Singh": {
              "translation": "ਤੇਰੇ ਮੁਖੜੇ ਤੋਣ ਕੁਰਬਾਨ ਕਰਨ ਲਈ,",
              "additional_information": {}
            }
          }
